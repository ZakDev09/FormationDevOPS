pipeline {
    agent any
    tools{
        maven "apache-maven-3.6.3"
    }
    stages {
        stage('First') {
            steps {
                sh 'echo \"Bonjour\" '
                sh 'date'
            }
        }
        stage('checkout') {
            steps {
                checkout([$class: 'GitSCM', branches: [[name: '${params.BRANCH}']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/HossameTor/DevopsFORMATION.git']]])
            }
        }
        stage('Build') {
            steps {
                sh 'mvn -B -DskipTests clean compile'
            }
        }
        stage('Test') {
            steps {
                sh 'mvn test'
            }
            post {
                always {
                    junit 'target/surefire-reports/*.xml'
                }
            }
        }
        stage('package') {
            steps {
                sh 'mvn -B -DskipTests package'
            }
        }
    }
}
